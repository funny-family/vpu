{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "noEmit": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "exclude": ["./dist", "./node_modules"]
}
